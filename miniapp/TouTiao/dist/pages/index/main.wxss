@import "../../common/vendor.wxss";

.counter-warp {
  width: 100%;
  height: 100%;
  padding-top: 90rpx;
}
.index-header {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  position: fixed;
  background: #fff;
  top: 0;
  left: 0;
  border-bottom: 2rpx solid #ccc;
  z-index: 99;
}
.index-header .search-btn {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-negative: 0;
  flex-shrink: 0;
}
.index-header .tab-channels {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  height: 100%;
  overflow: hidden;
}
.index-header .tab-channels .channels-item {
  height: 100%;
  color: #333;
  font-weight: 800;
  font-size: 32rpx;
}
.index-header .change-btn {
  width: 176rpx;
  height: 88rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  border-left: 2rpx solid #ccc;
  -ms-flex-negative: 0;
  flex-shrink: 0;
}
.index-header .change-btn .add-btn,
.index-header .change-btn .user-btn {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  height: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}
.news-cont {
  width: 100%;
}
.news-cont .news-list {
  width: 100%;
  padding: 0 30rpx;
}
.news-cont .news-list .news-item {
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #ccc;
}
.news-cont .news-list .news-item .item-title {
  width: 100%;
  font-size: 36rpx;
  color: #000;
}
.news-cont .news-list .news-item .item-info {
  line-height: 2.5;
  font-size: 24rpx;
  color: #999;
  position: relative;
}
.news-cont .news-list .news-item .item-info .comment-count {
  padding: 0 20rpx;
}
.news-cont .news-list .news-item .item-info .item-remove {
  position: absolute;
  right: 0;
  bottom: 0;
  height: 24rpx;
  padding: 0 16rpx;
  border-radius: 14rpx;
  border: 2rpx solid #999;
  line-height: 20rpx;
  text-align: center;
}